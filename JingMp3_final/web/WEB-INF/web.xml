<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistServlet</servlet-name>
        <servlet-class>controller.ArtistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SongServlet</servlet-name>
        <servlet-class>controller.SongServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>controller.UserManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>UserManager.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>UserManager.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>UserManager.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistManagementServlet</servlet-name>
        <servlet-class>ArtistManagement.ArtistManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SongManagementServlet</servlet-name>
        <servlet-class>SongManagement.SongManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistSongServlet</servlet-name>
        <servlet-class>controller.ArtistSongServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArtistDetailsServlet</servlet-name>
        <servlet-class>ArtistManagement.ArtistDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaylistServlet</servlet-name>
        <servlet-class>PlaylistManager.PlaylistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistServlet</servlet-name>
        <url-pattern>/artists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SongServlet</servlet-name>
        <url-pattern>/song</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/manageUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistManagementServlet</servlet-name>
        <url-pattern>/artistManagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SongManagementServlet</servlet-name>
        <url-pattern>/songManagement</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistSongServlet</servlet-name>
        <url-pattern>/artistSongs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArtistDetailsServlet</servlet-name>
        <url-pattern>/artistDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaylistServlet</servlet-name>
        <url-pattern>/playlist</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
